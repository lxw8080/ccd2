# Environment variables sample for CCD2
# Copy to `.env` and adjust values for your environment

# Database (external)
# Examples:
#   postgresql: postgresql://user:password@db-host:5432/ccd_db
#   mysql:      mysql+pymysql://user:password@db-host:3306/ccd_db
#   mssql:      mssql+pyodbc://user:password@db-host:1433/dbname?driver=ODBC+Driver+17+for+SQL+Server
DATABASE_URL=postgresql://user:password@db-host:5432/ccd_db

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=please-change-me-to-a-strong-random-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated or JSON array supported by pydantic-settings extra)
# Typical dev values; adjust for your frontend domains
# Note: dev via Vite proxy usually works without adding LAN IP here
#CORS_ORIGINS=["http://localhost:5173"]

